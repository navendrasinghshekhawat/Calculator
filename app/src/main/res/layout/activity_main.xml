               android:layout_height="wrap_content"
                android:id="@+id/et1"
                android:gravity="right|center_vertical"
                android:textSize="50dp"
                />
            <EditText
                android:layout_weight="1"
                android:layout_width="match_parent"
               android:layout_height="wrap_content"
                android:id="@+id/et2"
                android:background="@drawable/textstyle"
                android:gravity="right|center_vertical"
                android:textSize="50dp"
                />
        </LinearLayout>

