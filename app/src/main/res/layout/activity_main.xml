                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:onClick="solve"
                android:background="@drawable/costonbutton"/>

</LinearLayout>

